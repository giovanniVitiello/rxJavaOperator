<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainScreen">

    <fragment
        android:id="@+id/mainScreen"
        android:name="com.example.rxjavaretrofit.MainScreen"
        android:label="fragment_main_screen"
        tools:layout="@layout/fragment_main_screen">
        <action
            android:id="@+id/action_mainScreen_to_detailScreen"
            app:destination="@id/detailScreen" />

    </fragment>

    <fragment
        android:id="@+id/detailScreen"
        android:name="com.example.rxjavaretrofit.DetailScreen"
        android:label="fragment_detail_screen"
        tools:layout="@layout/fragment_detail_screen">
        <argument
            android:name="key_id"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/secondScreen"
        android:name="com.example.rxjavaretrofit.SecondScreen"
        android:label="fragment_third_screen"
        tools:layout="@layout/fragment_second_screen" />

    <fragment
        android:id="@+id/thirdScreen"
        android:name="com.example.rxjavaretrofit.ThirdScreen"
        android:label="ThirdScreen"
        tools:layout="@layout/fragment_third_screen" />
</navigation>